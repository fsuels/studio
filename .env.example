# Advanced Search & Semantic Query Environment Variables

# AI Gateway (LiteLLM/vLLM) Configuration (server-side only)
AI_GATEWAY_URL=https://ai-gateway.internal
AI_GATEWAY_API_KEY=replace-with-liteLLM-key
AI_GATEWAY_MODEL=gpt-oss-20b
AI_GATEWAY_ANALYZE_MODEL=
AI_GATEWAY_SUMMARY_MODEL=
AI_GATEWAY_SIMPLIFY_MODEL=
AI_GATEWAY_EXPLAIN_MODEL=

# CDN and Asset Management Configuration
ASSET_CDN=https://cdn.123legaldoc.com/assets
ENABLE_CDN=false
FALLBACK_TO_TYPESCRIPT=true

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=legal-docs-semantic-search
PINECONE_NAMESPACE=documents

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Google Maps / Places API (Client-side)
# Required for address autocomplete fields (e.g., Vehicle Bill of Sale)
# Enable the "Maps JavaScript API" and "Places API" in Google Cloud Console,
# then create a browser key restricted by HTTP referrer to your domains.
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Vertex AI Configuration
VERTEX_AI_ENDPOINT=textembedding-gecko@003

# Firebase Configuration (existing)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin SDK
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Stripe Configuration
# Server-side secret key (never expose client-side)
STRIPE_SECRET_KEY=
# Client-side publishable key for Stripe.js
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Rate Limiting
SEARCH_RATE_LIMIT_PER_HOUR=100
EXPORT_RATE_LIMIT_PER_HOUR=5

# Export Configuration
EXPORT_MAX_RESULTS=50000
EXPORT_CLEANUP_HOURS=24

# Development/Debug
NODE_ENV=development
DEBUG_SEMANTIC_SEARCH=true

# Feature flags
FEATURE_SECURITY_HEADERS=true
USE_DIRECT_PDF_FILLING=false

# Operational health monitoring
# Persist metrics and alerts to Firestore when true (requires Admin creds)
OPERATIONAL_HEALTH_PERSIST=false
# Enable background metrics collection timers
OPERATIONAL_HEALTH_COLLECT=false
