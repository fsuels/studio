# Real-time Collaboration Configuration

# Enable/disable real-time collaboration features
ENABLE_COLLABORATION=true

# Collaboration server settings
COLLABORATION_PORT=3001
NEXT_PUBLIC_COLLABORATION_WS_URL=ws://localhost:3001

# Redis configuration for presence channels
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CLUSTER_HOSTS=

# Production Redis (Redis Cloud example)
# REDIS_HOST=your-redis-cloud-host.redis.cloud
# REDIS_PORT=12345
# REDIS_PASSWORD=your-redis-password

# Firebase Cloud Messaging for push notifications
# Already configured in your existing Firebase setup
# No additional env vars needed if using the same Firebase project

# Optional: Collaboration-specific settings
COLLABORATION_MAX_USERS_PER_DOCUMENT=50
COLLABORATION_SESSION_TIMEOUT=3600000
COLLABORATION_HEARTBEAT_INTERVAL=30000

# Security settings
COLLABORATION_TOKEN_SECRET=your-jwt-secret-for-collaboration-tokens
COLLABORATION_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Performance settings
COLLABORATION_REDIS_POOL_SIZE=10
COLLABORATION_WEBSOCKET_TIMEOUT=120000

# Logging
COLLABORATION_LOG_LEVEL=info
COLLABORATION_LOG_FILE=./logs/collaboration.log