{
  "ci": {
    "collect": {
      "staticDistDir": "apps/web/out",
      "url": ["/en", "/en/signwell", "/en/dashboard"],
      "numberOfRuns": 3,
      "settings": { "chromeFlags": "--no-sandbox" }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9 }]
      }
    }
  }
}
