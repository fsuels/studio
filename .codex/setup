#!/usr/bin/env bash
set -euo pipefail

# â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
# â•‘  Codex bootstrap: install dependencies + Next.js build (skip export/LHCI) â•‘
# â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export npm_config_loglevel=error
echo "ğŸ”§  [setup] Installing project dependencies and ensuring dev toolsâ€¦"

###############################################################################
# 1 â€” Project dependency installation                                          #
###############################################################################
if [[ -f pnpm-lock.yaml ]]; then
  corepack enable pnpm
  echo "ğŸ“¦  Installing project dependencies via pnpm (including devDependencies)"
  pnpm install --frozen-lockfile --prefer-offline
elif [[ -f yarn.lock ]]; then
  corepack enable yarn
  echo "ğŸ“¦  Installing project dependencies via yarn (including devDependencies)"
  yarn install --immutable --check-cache
else
  echo "ğŸ“¦  Installing project dependencies via npm ci (including devDependencies)"
  npm ci --prefer-offline --no-audit --progress=false
fi

###############################################################################
# 2 â€” Ensure missing dev tools are installed locally                           #
###############################################################################
echo "ğŸ›   Ensuring ESLint, @eslint/js, Playwright, and Next.js are in devDependenciesâ€¦"

# Install missing devDependencies (if not already present in package.json)
# This guarantees that "npm run lint", "npm run test", "npm run e2e", and "npm run build" find their binaries.
if [[ -f pnpm-lock.yaml ]]; then
  pnpm add -D eslint @eslint/js next playwright @playwright/test
elif [[ -f yarn.lock ]]; then
  yarn add -D eslint @eslint/js next playwright @playwright/test
else
  npm install --save-dev eslint @eslint/js next playwright @playwright/test
fi

# Install Playwright browser binaries if Playwright CLI is now available
if command -v npx &> /dev/null && npx playwright --version &> /dev/null; then
  echo "ğŸ­  Installing Playwright browser binariesâ€¦"
  npx playwright install --with-deps
fi

###############################################################################
# 3 â€” Persist Firebase key into .env.local                                     #
###############################################################################
if [[ -n "${FIREBASE_SERVICE_ACCOUNT_KEY_JSON:-}" ]]; then
  echo "ğŸ—   Writing FIREBASE_SERVICE_ACCOUNT_KEY_JSON to .env.local"
  # Remove any wrapping quotes so JSON.parse() works correctly
  printf "FIREBASE_SERVICE_ACCOUNT_KEY_JSON=%s\n" \
    "${FIREBASE_SERVICE_ACCOUNT_KEY_JSON}" > .env.local
fi

###############################################################################
# 4 â€” Next.js build (skip static export and LHCI to keep under 300 s)         #
###############################################################################
echo "ğŸ›    Running npm run build"
npm run build

###############################################################################
# 5 â€” Do NOT run `npm run export` or `lhci autorun` (would exceed 300 s)      #
###############################################################################
echo "âš ï¸   Skipping \`next export\` and \`lhci autorun\` to avoid 300 s timeout."

###############################################################################
# 6 â€” Helpful global tools (silent)                                           #
###############################################################################
echo "ğŸ”§  Installing global helpers (eslint, prettier, typescript, firebase-tools) for CI convenienceâ€¦"
npm install -g eslint prettier typescript firebase-tools > /dev/null 2>&1 || true

echo "âœ…  [setup] Dependencies installed, dev tools available, and site built."
