#!/usr/bin/env bash
set -euo pipefail

# â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
# â•‘  Codex bootstrap: install dependencies + Next.js build (skip export/LHCI) â•‘
# â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export npm_config_loglevel=error
echo "ðŸ”§  [setup] Installing dependencies and building Next.jsâ€¦"

###############################################################################
# 1 â€” Dependency installation                                                 #
###############################################################################
if [[ -f pnpm-lock.yaml ]]; then
  corepack enable pnpm
  echo "ðŸ“¦  Installing via pnpm ci"
  pnpm install --frozen-lockfile --prefer-offline
elif [[ -f yarn.lock ]]; then
  corepack enable yarn
  echo "ðŸ“¦  Installing via yarn install"
  yarn install --immutable --check-cache
else
  echo "ðŸ“¦  Installing via npm ci"
  npm ci --prefer-offline --no-audit --progress=false
fi

###############################################################################
# 2 â€” Persist Firebase key into .env                                           #
###############################################################################
if [[ -n "${FIREBASE_SERVICE_ACCOUNT_KEY_JSON:-}" ]]; then
  echo "ðŸ—   Writing FIREBASE_SERVICE_ACCOUNT_KEY_JSON to .env"
  printf "FIREBASE_SERVICE_ACCOUNT_KEY_JSON='%s'\n" \
    "${FIREBASE_SERVICE_ACCOUNT_KEY_JSON}" > .env
fi

###############################################################################
# 3 â€” Next.js build (skip static export and LHCI to keep under 300 s)         #
###############################################################################
echo "ðŸ›    Running npm run build"
npm run build

###############################################################################
# 4 â€” Do NOT run `npm run export` or LHCI here (would exceed 300 s)          #
###############################################################################
echo "âš ï¸   Skipping `next export` and `lhci autorun` to avoid 300 s timeout."

###############################################################################
# 5 â€” Helpful global tools (silent)                                           #
###############################################################################
npm install -g eslint prettier typescript firebase-tools > /dev/null 2>&1 || true

echo "âœ…  [setup] Dependencies installed and site built (ready for Codex)."
